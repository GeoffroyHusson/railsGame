%h1 Liste des tournois

%table
  %thead
    %tr
      %th Nom
      %th Lieu
      %th Nombre de joueur max
      %th Date
      %th{:colspan => "3"}
  %tbody
    - @tournois.each do |tournoi| 
      %tr
        %td= tournoi.name 
        %td= tournoi.place 
        %td= tournoi.nbPlayerMax 
        %td= tournoi.date 
        %td= link_to 'Show', tournoi 
        - if current_user.admin?
          %td= link_to 'Edit', edit_tournoi_path(tournoi) 
          %td= link_to 'Destroy', delete_tounoi_path(tournoi), method: :delete, data: { confirm: 'Are you sure?' } 
          %br
= link_to 'New Tournoi', new_tournoi_path 
