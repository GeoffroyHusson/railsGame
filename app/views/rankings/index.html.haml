%h1 Classement général
- @game.each do |g|
	- tab = []
	%h3
		%span.label.label-default=g.title
	- @user.each do |u|
		- score = @war.where(user_1_id: u.id,game_id: g.id).sum(:scoreJ1) + @war.where(user_2_id: u.id).sum(:scoreJ2)
		- @W = 0
		- @N = 0
		- @L = 0
		- @war.where(user_1_id: u.id,game_id: g.id).each do |sc|
			- if sc.scoreJ1 == 3
				- @W +=1
			-  if sc.scoreJ1 == 1
				- @N +=1
			-  if sc.scoreJ1 == 0
				- @L +=1
		- @war.where(user_2_id: u.id,game_id: g.id).each do |sc|
			- if sc.scoreJ2 == 3
				- @W +=1
			-  if sc.scoreJ2 == 1
				- @N +=1
			-  if sc.scoreJ2 == 0
				- @L +=1
		- s = [u.name,score,@W,@L,@N]
		- tab.push(s)
	- tab.sort! {|a,b| b[1] <=> a[1]}
	%table.table
		%thead
			%tr
				%th
					Nom du joueur
				%th
					Score
				%th
					Gagnés
				%th 
					Perdus
				%th 
					Nuls
		%tbody
			- tab.each do |x|
				%tr
					- x.each do |val|
						%td=val